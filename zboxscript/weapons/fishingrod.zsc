Class FishGold : BoxActor
{
	Default
	{
		Health 10;
		Radius 16;
		Height 16;
		Speed 10;
		Species "Fish";
		+SOLID;
		+THRUSPECIES;
		+SHOOTABLE;
		+NOGRAVITY;
		+WALLSPRITE;
		+INTERPOLATEANGLES;
		+NOBLOOD;
	}

	override void Tick(void)
	{
		self.Angle += 90;
		Super.Tick();
		self.Angle -= 90;

		if ((waterlevel == 0) && (self.Health > 0)) {A_Die();}
	}
	
	States
	{
		Spawn:
			FROD K 10 A_Wander;
			Loop;
		Pain:
			FROD # 1 A_Die();
			Stop;
		Pain.FishingRod:
			//put stuff here
		Death.FishingRod:
			//put stuff here
		Death:
			TNT1 A 35 A_SpawnItemEX("SafeBoom", flags: SXF_NOCHECKPOSITION);
			Stop;
		
	}
}

