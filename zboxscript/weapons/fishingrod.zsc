Class FishGold : BoxActor
{
	Default
	{
		Radius 16;
		Height 16;
		Speed 10;
		+THRUACTORS;
		+NOGRAVITY;
		+WALLSPRITE;
		+INTERPOLATEANGLES;
		+SHOOTABLE;
	}

	override void Tick(void)
	{
		self.Angle += 90;
		Super.Tick();
		self.Angle -= 90;
	}
	
	States
	{
		Spawn:
			FROD K 10 A_Wander;
			Loop;
	}
}

Class FishBig : FishGold
{
	States
	{
		Spawn:
			FROD L 10 A_Wander;
			Loop;
	}
}

Class FishThin : FishGold
