			Goto Super::Thirdy;
	}
}

class PepperBullet : OnionBullet
{
	Default
	{
		Radius 12;
		Height 24;
		DamageFunction (10);
		DamageType "Pepper";
		Speed 16;
		+BLOODSPLATTER;
	}

	States
	{
		Spawn:
            PEPR PQ 4 BRIGHT A_BoxParticle2("ff eb 00", 1, 16, 70, POffset: 4.0, POffsetZ: 4.0, PSpeed: -1.0, PBright: true);
            Loop;
		Death.Sky:
		Death:
			TNT1 A 1 A_SpawnItemEx("DangerBoomPepper", 0, 0, 0, 0, 0, 0);
			Stop;
	}
}

class DangerBoomPepper : DangerBoom {Default {DamageType "Pepper"; Obituary "$BOX_DIE_PEPPER";}}